{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "declaration": true,
        "noResolve": false,
        "module": "commonjs",
        "target": "es5",
        "outDir": "dist",
        "lib": ["es5", "dom", "es2015.promise"]
    },

    "include": [
        "src/**/*"
    ]
}